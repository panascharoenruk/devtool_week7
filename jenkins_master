pipeline {
    agent any

    stages {
        
        stage('Welcome to master'){
            steps{
                echo 'Start Program'
            }
        }

        stage('Tigger the Slave Jobs') {
            steps {
                script {
                    echo 'Start Trigger to send name and age to slave'
                    def data = readFile(file: 'data.txt')
                    def dataline = data.readLines()
                    build job: 'jenkins_slave', parameters: [string(name: 'NAME', value: dataline.get(0)), string(name: 'age', value: dataline.get(1))]
                }
            }
        }
    }
}
